<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ReservationFragment">

    <!-- Image de l'événement -->
    <ImageView
        android:id="@+id/image_event"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/images"
        android:contentDescription="@string/event_image" />

    <!-- Prix de l'événement -->
    <TextView
        android:id="@+id/price_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prix : $50"
        android:textSize="18sp"
        android:layout_marginTop="10dp" />

    <!-- Nombre de places disponibles -->
    <TextView
        android:id="@+id/available_seats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de places : 50"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <!-- Sélection du type de billet avec un Spinner -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Type de Billet"
            android:textStyle="bold"
            android:padding="8dp" />

        <Spinner
            android:id="@+id/ticket_type_spinner"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:padding="8dp" />
    </TableRow>

    <!-- Bouton Ajouter et total des billets -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btn_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/pink"
            android:text="Ajouter" />

        <TextView
            android:id="@+id/total_tickets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total billets : 50"
            android:paddingStart="16dp"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Ajout du TextView pour afficher le prix total -->
    <TextView
        android:id="@+id/total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prix total : $0"
        android:textSize="18sp"
        android:layout_marginTop="16dp" />

    <!-- Liste des réservations -->
    <ListView
        android:id="@+id/history_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />
</LinearLayout>
