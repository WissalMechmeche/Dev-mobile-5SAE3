<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Event Image -->
    <ImageView
        android:id="@+id/event_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="Event Image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Event Title -->
    <TextView
        android:id="@+id/event_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Event Title"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/event_image"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Event Description -->
    <TextView
        android:id="@+id/event_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Event Description goes here. A brief summary of the event."
        android:textSize="14sp"
        android:textColor="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/event_title"
        app:layout_constraintStart_toEndOf="@id/event_image"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Event Start Date -->
    <TextView
        android:id="@+id/event_start_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Start Date: 01 Jan 2024"
        android:textSize="14sp"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@id/event_description"
        app:layout_constraintStart_toEndOf="@id/event_image"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Buttons Layout (Details, Modify, Delete) -->
    <LinearLayout
        android:id="@+id/event_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/event_start_date"
        app:layout_constraintStart_toEndOf="@id/event_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="end"
        android:weightSum="3">

        <!-- Details Button (Icon) -->
        <ImageButton
            android:id="@+id/btn_details"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/ic_details"
            android:contentDescription="Details" />

        <!-- Modify Button (Icon) -->
        <ImageButton
            android:id="@+id/btn_modify"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/ic_edit"
            android:contentDescription="Modify" />

        <!-- Delete Button (Icon) -->
        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/ic_delete"
            android:contentDescription="Delete" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
