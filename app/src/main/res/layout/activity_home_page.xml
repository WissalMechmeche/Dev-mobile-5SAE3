<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/openEventFragmentButton"
        android:layout_width="136dp"
        android:layout_height="47dp"
        android:text="Event"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/openBlogFragmentButton"
        android:layout_width="136dp"
        android:layout_height="47dp"
        android:text="Blogs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/openTicketFragmentButton"
        android:layout_width="136dp"
        android:layout_height="47dp"
        android:text="Tickets"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/openEventFragmentButton"
        app:layout_constraintStart_toEndOf="@+id/openBlogFragmentButton" />

</androidx.constraintlayout.widget.ConstraintLayout>